{
  "name": "trim-lab",
  "version": "0.1.2",
  "description": "Blazing-fast trimmer with WebCodecs (Option B) and precise export",
  "main": "electron/main.js",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "electron-builder",
    "start": "npm run dev"
  },
  "build": {
    "appId": "com.trimlab.app",
    "productName": "TrimLab",
    "files": [
      "electron/**/*",
      "renderer/**/*",
      "common/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.video"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Video"
    },
    "asarUnpack": [
      "node_modules/ffmpeg-static/**",
      "node_modules/ffprobe-static/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "nsis": {
      "perMachine": true
    },
    "fileAssociations": [
      {
        "ext": "mp4",
        "name": "MP4 Video",
        "role": "Viewer"
      },
      {
        "ext": "mov",
        "name": "QuickTime Movie",
        "role": "Viewer"
      },
      {
        "ext": "m4v",
        "name": "M4V Video",
        "role": "Viewer"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "mp4box": "^2.1.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3"
  }
}
